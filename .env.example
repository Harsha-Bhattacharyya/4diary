# Database
MONGODB_URI=mongodb://localhost:27017

# Redis (Optional - Required for share tokens feature)
# If not configured, ephemeral share links will be unavailable
REDIS_URL=redis://localhost:6379

# Application
NEXT_PUBLIC_BASE_URL=http://localhost:3000
PORT=3000

# Authentication (Required)
# Generate a secure random secret: openssl rand -base64 32
JWT_SECRET=your-secret-key-here-min-32-chars

# Sentry (Optional - Error tracking)
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_ORG=
# SENTRY_PROJECT=
# SENTRY_AUTH_TOKEN=

# Vercel Analytics (Optional - Automatically enabled on Vercel deployments)
# No configuration needed - analytics are automatically injected when deployed to Vercel

# Privacy-Friendly Logger (Optional - For self-hosters)
# LOG_LEVEL: DEBUG, INFO, WARN, ERROR, NONE (default: INFO)
LOG_LEVEL=INFO
# LOG_CONSOLE: Enable console output (default: true)
LOG_CONSOLE=true
# LOG_FILE: Enable file-based logging (default: false)
LOG_FILE=true
# LOG_DIR: Directory for log files (default: ./logs)
LOG_DIR=./logs
# LOG_MAX_SIZE: Maximum log file size in bytes before rotation (default: 10MB)
LOG_MAX_SIZE=10485760
# LOG_MAX_FILES: Maximum number of rotated log files to keep (default: 5)
LOG_MAX_FILES=5
# LOG_STRUCTURED: Output logs as JSON for log aggregators (default: false)
LOG_STRUCTURED=false
# LOG_SANITIZE_PII: Automatically redact PII from logs (default: true)
LOG_SANITIZE_PII=true

# Translation Service (Optional - For multi-language support)
# Get API key from lingo.dev (free tier available)
# If not configured, translation features will be unavailable
LINGO_API_KEY=

# TelemetryDeck (Optional - Privacy-focused analytics)
# Get App ID from https://telemetrydeck.com
# Users can toggle this in Settings > Privacy
# Fully anonymous, no PII, self-hostable compatible
NEXT_PUBLIC_TELEMETRYDECK_APP_ID=
